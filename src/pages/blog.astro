---
import { getCollection } from 'astro:content';
import WrapperLayout from '../layouts/Wrapper.astro';

const blogPost = await getCollection('blog');
---

<WrapperLayout>
  <section class="blog-entries">
    {
      blogPost.map(({ slug, data: { title, date, description } }) => {
        return (
          <div class="post">
            <h2>
              <a href={`/blog/${slug}`}>{title}</a>
            </h2>
            <time datetime={date.toISOString()}>{date.toDateString()}</time>
            <p>{description}</p>
            <a href={`/blog/${slug}`}>read post</a>
          </div>
        );
      })
    }
  </section>
  <p class="feed">
    <a href="/rss.xml">
      <span role="img" aria-label="satellite dish"> ðŸ“¡</span>
      <span class="link-text">Subscribe to the RSS Feed</span>
    </a>
  </p>
</WrapperLayout>

<style>
  .post {
    margin: 0;
  }

  .post:not(:first-of-type) {
    margin-top: 3rem;
  }

  .post h2 {
    margin: 0;
  }

  .post h2 a {
    color: inherit;
    text-decoration: none;
  }

  .post time {
    color: var(--color-gray-700);
    display: block;
    font-size: 0.875rem;
    margin: 0.5rem 0 0;
  }

  .post p {
    margin: 0.5rem 0 0;
  }

  .post .big-link {
    font-size: 0.875rem;
  }

  .feed {
    margin: 4rem 0 0;
  }

  .feed a {
    color: var(--color-gray-600);
    text-decoration: none;
  }

  .link-text {
    text-decoration: underline;
  }
</style>
