---
import DefaultLayout from '../layouts/Default.astro';
import ShopItems from '../components/ShopItems.astro';
import Cart from '../components/Cart';
---

<DefaultLayout>
  <div class="shop">
    <h1>Shop Sandwitch Kits</h1>

    <noscript>
      <p>
        Javascript is required to purchase things from sndwch webstore. To order
        by phone call <a href="tel:1248-434-5508">+12484345508</a>
      </p>
    </noscript>

    <div class="products">
      <!-- <p>TODO: list products</p>
       -->
      <ShopItems />
      <!-- ------------------ -->
      <!-- <p>TODO: show cart</p> -->
      <!-- because it is static html by default -->
      <!-- we are rendering this like client componet -->
      <!-- by ading client:only directive -->
      <!-- and because we are using multiple frameworks
      we must tell it what framework component is written in -->
      <!-- only now it is hydrated, it is normal javascript component -->
      <Cart client:only="solid-js" />
      <!-- ------------------ -->
    </div>
  </div>
</DefaultLayout>

<style>
  .shop {
    padding: 3rem 5%;
  }

  .products {
    align-items: flex-start;
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr 260px;
    position: relative;
  }
</style>
