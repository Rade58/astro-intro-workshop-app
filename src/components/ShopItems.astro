---
import { formatCurrency } from '../util/formatCurrency';

const result = await fetch(
  'https://astro-frontend-masters-api.netlify.app/api/products'
);

if (!result.ok) {
  console.error(result);
  // of course this is not complete error handling
  // we would do error handling in hre to display something
  // else if request fails
  // in our case error will be thrown and our app will break
}

const shopItems: ShopItem[] = await result.json();
---

<section class="shop-items">
  {
    shopItems.map(({ description, id, image, price, title }) => (
      <div class="item">
        <img src={image.src} alt={image.alt} />
        <h2>{title}</h2>
        <p>{description}</p>
        <p class="price">{formatCurrency(price)}</p>
        <p>TODO: add to cart button</p>
      </div>
    ))
  }
</section>

<style>
  .shop-items {
    display: flex;
    gap: 3rem 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin: 2rem 0;
  }

  .item {
    width: 250px;
  }

  .item img {
    aspect-ratio: 1;
    border-radius: 0.125rem;
    display: block;
    width: 100%;
  }

  .item h2 {
    font-size: 1.125rem;
    margin: 0.75rem 0 0;
  }

  .item p {
    margin: 0.25rem 0 0;
  }
</style>
